@using Online_Ticari_Otomasyon_1_MVC5.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Personel Listesi</h2>
<br />
<table class="table table-borderless">
    <tr>
        <th>Personel ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach(var x in Model)
            {
<tr>
    <td>@x.PersonelID</td>
    <td>@x.PersonelAd</td>
    <td>@x.PersonelSoyad</td>
    <td>
        <img src="@x.PersonelGorsel" style="width:75px;height:50px;" />
    </td>
    <td>@x.Departman.DepartmanAd</td>
    <td><a href="#"x.PersonelID" class="btn btn-danger"> Sil</a></td>
    <td><a href="/Personel/PersonelGetir/@x.PersonelID" class="btn btn-success"> Güncelle</a></td>
    <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-default" style="background-color:lightcoral; color:white"> Satışlar</a></td>
</tr>
            }
</table>
<a href="/Personel/PersonelEkle" class=" btn btn-info"> Personel Ekle</a>
