@using Online_Ticari_Otomasyon_1_MVC5.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Cariler Tablosu</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detayla</th>
    </tr>
    @foreach(var x in Model)
            {
                <tr>
                    <td>@x.CariID</td>
                    <td>@x.CariAD</td>
                    <td>@x.CariSoyad</td>
                    <td>@x.CariSehir</td>
                    <td>@x.CariMail</td>
                    <td><a href="/Cari/CariSil/@x.CariID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Cari/CariGetir/@x.CariID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Cari/MusteriSatis/@x.CariID" class="btn btn-info">Satış Geçmişi</a></td>
                </tr>
            }
</table>
<a href="/Cari/YeniCari/" class="btn btn-primary">Yeni Cari Ekle</a> 

