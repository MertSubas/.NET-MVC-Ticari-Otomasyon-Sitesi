@using Online_Ticari_Otomasyon_1_MVC5.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<h2>Ürün Listesi</h2>

<br />
@using(Html.BeginForm("Index","Urun", FormMethod.Get))
            {
                <p>
                    Ürün Adı=@Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<table class="table table-bordered">
    <tr>

        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ TL</th>
        <th>SATIŞ TL</th>
        <th>KATEGORİ</th>

        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach(var u in Model)
            {
<tr>

    <td>@u.UrunAD</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat ₺</td>
    <td>@u.SatisFiyat ₺</td>
    <td>@u.Kategori.KategoriAD</td>

    <td>
        <a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-success">Güncelle</a>
    </td>
    <td>
        <a href="/Urun/SatisYap/@u.UrunID" class="btn btn-default" style="background-color:#0094ff" >Satış Yap</a>
    </td>
</tr>
            }
</table>

<a href="/Urun/YeniUrun/" class="btn btn-warning">Yeni Ürün</a>