@using Online_Ticari_Otomasyon_1_MVC5.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Listesi</h2>
<br />
<table class="table table-bordered" style=" margin-top:20px;">
    <tr>

        <th>Seri ve Sıra No</th>

        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Fatura Detaylar</th>
        <th>Yeni Kalem</th>

    </tr>
    @foreach (var k in Model)
    {

<tr>

    <td>
        @k.FaturaSeriNo @k.FaturaSiraNo
    </td>

    <td>
        @k.FaturaTarih
    </td>
    <td>
        @k.Saat
    </td>
    <td>
        @k.Toplam ₺
    </td>
    <td>
        @k.TeslimEden
    </td>
    <td>
        @k.TeslimAlan
    </td>



    <td><a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-success"> Güncelle</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-default" style="background-color:lightcoral; color:white"> Fatura Detay</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-default" style="background-color:thistle; color:white">Kalem</a></td>
</tr>
    }

</table>
<a href="/Fatura/FaturaEkle/" class=" btn btn-info"> Yeni Fatura</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:#d95151; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSiraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>